<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_230"
    android:layout_height="@dimen/size_430"
    android:orientation="vertical"
    android:padding="@dimen/padding_4">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_4">

        <ImageView
            android:id="@+id/itemImgViewMoviePoster"
            android:layout_width="@dimen/size_230"
            android:layout_height="@dimen/size330"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemTextMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemTextMovieTimeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize16sp" />

    <TextView
        android:id="@+id/itemTextMovieCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:background="@drawable/border_curved"
        android:padding="@dimen/padding_4"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14sp" />

</LinearLayout>